<Page
    x:Class="FluentScanner.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ctkc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:enumeration="using:Windows.Devices.Enumeration"
    xmlns:scanners="using:Windows.Devices.Scanners"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea"
          Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Titlebar -->
        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Canvas.ZIndex="1000"
                    Orientation="Horizontal">
            <Image x:Name="imgAppIcon"
                   Height="16"
                   Width="16"
                   Margin="16,0"
                   Source="ms-appx:///Assets/Logo/Square44x44Logo.altform-unplated_targetsize-256.png" />
            <TextBlock x:Uid="Main_AppDisplayName"
                       Text="Scanning"
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       Margin="0,0,12,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Scanner options -->
        <Grid Grid.Row="1"
              Grid.Column="0">
            <!-- No scanner selected -->

            
            <!-- Scanner Options -->
            <StackPanel Orientation="Vertical"
                        Margin="24">
                <Button x:Name="btnLoadScanners"
                        Visibility="Collapsed"
                        Content="Load scanners"
                        Click="btnLoadScanners_Click" />
                <!-- Scanner -->
                <ComboBox x:Name="cmbxScanner"
                          Header="Scanner"
                          ItemsSource="{x:Bind ViewModel.ScannerCollection, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedDevice, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="enumeration:DeviceInformation">
                            <TextBlock Text="{x:Bind Name, Mode=OneWay}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Scanner Source -->
                <ComboBox x:Name="cmbxScannerSource"
                          Header="Source"
                          ItemsSource="{x:Bind ViewModel.ScannerSources,Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedScannerSource, Mode=TwoWay}">
                </ComboBox>

                <!-- Image format -->
                <ComboBox x:Name="cmbxImageFormat"
                          Header="ImageFormat"
                          ItemsSource="{x:Bind ViewModel.ScannerFormats, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedScannerFormat, Mode=TwoWay}">
                    
                </ComboBox>

                <!-- Colour Mode -->
                <ComboBox x:Name="cmbxColourMode"
                          Header="Colour"
                          ItemsSource="{x:Bind ViewModel.ScannerColourModes, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedScannerColourMode, Mode=TwoWay}">
                    
                </ComboBox>

                <!-- Resolution (DPI) -->
                <ComboBox x:Name="cmbxResolution"
                          Header="Resolution (DPI)"
                          Visibility="Collapsed"
                          >
                    
                </ComboBox>
                
            </StackPanel>


            <!-- Flying CommandBar -->
            <ctkc:DropShadowPanel Canvas.ZIndex="100"
                                 BlurRadius="10.0"
                                 ShadowOpacity="0.30"
                                 Color="Black"
                                 OffsetX="4"
                                 OffsetY="4"
                                 Margin="24"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Bottom">
                <CommandBar DefaultLabelPosition="Right"
                            CornerRadius="2"
                            Style="{ThemeResource CommandBarRevealStyle}">
                    <CommandBar.PrimaryCommands>
                        <AppBarButton Icon="Scan"
                                      Label="New scan"
                                      Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                                      Foreground="{ThemeResource SystemControlForegroundChromeWhiteBrush}"
                                      FontWeight="SemiBold"
                                      CornerRadius="2,0,0,2"
                                      ToolTipService.ToolTip="New scan"
                                      Command="{x:Bind ViewModel.NewScanCommand}"/>
                    </CommandBar.PrimaryCommands>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton Icon="Setting"
                                      Label="Settings"
                                      Command="{x:Bind ViewModel.SettingsCommand}"/>
                        <AppBarButton Label="About"
                                      Command="{x:Bind ViewModel.AboutCommand}">
                            <AppBarButton.Icon>
                                <FontIcon Glyph="&#xE946;"/>
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>
            </ctkc:DropShadowPanel>



        </Grid>

        <!-- Document details -->
        <!-- KEEP IN MIND! - Let the contents have at least 32px of padding, due to the titlebar! -->
        <ctkc:DropShadowPanel Grid.Row="1"
                              Grid.RowSpan="2"
                              Grid.Column="1"
                              Canvas.ZIndex="100"
                              BlurRadius="10.0"
                              ShadowOpacity="0.30"
                              Color="Black"
                              OffsetX="4"
                              OffsetY="4"
                              Margin="8,0,8,8"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
            <!-- Content -->
            <Grid Background="{ThemeResource SystemControlAcrylicElementBrush}"
                  CornerRadius="2"
                  Padding="4">
                <Grid.BackgroundTransition>
                    <BrushTransition />
                </Grid.BackgroundTransition>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Top bar -->
                <Grid>
                    <Button Style="{ThemeResource FluentDialogButtonBackStyle}" />
                    <InkToolbar HorizontalAlignment="Center"/>
                </Grid>

                <!-- Scanned Image -->
                <ctkc:DropShadowPanel Grid.Row="1"
                              Grid.RowSpan="2"
                              Grid.Column="1"
                              Canvas.ZIndex="100"
                              BlurRadius="10.0"
                              ShadowOpacity="0.30"
                                      Margin="8,0,8,8"
                              Color="Black"
                              OffsetX="4"
                              OffsetY="4"                              
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                          CornerRadius="2">
                        <Image x:Name="imgScanned"
                       Grid.Row="1"
                       Source="{x:Bind ViewModel.ScannedImage, Mode=OneWay}"
                       Margin="24"/>

                        <!-- Flying CommandBar -->
                        <ctkc:DropShadowPanel Grid.Row="1"
                                Canvas.ZIndex="100"
                                 BlurRadius="10.0"
                                 ShadowOpacity="0.30"
                                 Color="Black"
                                 OffsetX="4"
                                 OffsetY="4"
                                 Margin="12"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Bottom">
                            <CommandBar DefaultLabelPosition="Right"
                                        CornerRadius="2"
                                        Style="{ThemeResource CommandBarRevealStyle}">
                                <CommandBar.PrimaryCommands>
                                    <AppBarButton Icon="Save"
                                      Label="Save"
                                      Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                                      Foreground="{ThemeResource SystemControlForegroundChromeWhiteBrush}"
                                      FontWeight="SemiBold"
                                      CornerRadius="2"
                                      ToolTipService.ToolTip="Save"
                                                  Command="{x:Bind ViewModel.SaveEditedSaveCommand}"/>
                                    <AppBarButton Icon="Copy"
                                                  Visibility="Collapsed"
                                                  Label="Copy"
                                                  LabelPosition="Collapsed"
                                                  ToolTipService.ToolTip="Copy" />
                                    <AppBarButton Icon="Share"
                                                  Visibility="Collapsed"
                                                  Label="Share"
                                                  LabelPosition="Collapsed"
                                                  ToolTipService.ToolTip="Share"
                                                  CornerRadius="0,2,2,0">
                                        <AppBarButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Send to email" >
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE89C;"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Share with other apps"
                                                                Icon="Share" />
                                            </MenuFlyout>
                                        </AppBarButton.Flyout>
                                    </AppBarButton>
                                </CommandBar.PrimaryCommands>
                            </CommandBar>
                        </ctkc:DropShadowPanel>
                    </Grid>
                </ctkc:DropShadowPanel>


            </Grid>
        </ctkc:DropShadowPanel>

        
    </Grid>
</Page>
